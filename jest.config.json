{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "<rootDir>/tests/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/js/**/*.js",
    "!**/node_modules/**"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "coverageDirectory": "coverage",
  "verbose": true,
  "globals": {
    "Intl": true
  }
}
